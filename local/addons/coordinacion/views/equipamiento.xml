<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_coordinacion_equipamiento_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
                    
            <form>
             <!--   <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': [('same_vat_partner_id', '=', False)]}">
                  A partner with the same <span><span class="o_vat_label">Tax ID</span></span> already exists (<field name="same_vat_partner_id"/>), are you sure to create a new one?
                </div>
                -->
                <sheet>
                    <div class="oe_button_box" name="button_box"/>
                    
                                   
                    
        <div class="oe_title">
		<!--<label for="name" string="Nombre"/>-->
          <h1>
            <div class="d-flex">
              <field name="priority" widget="priority" class="mr-3"/>
              <field class="text-break" name="name"/>
            </div>
          </h1>
        </div>


                    <group>
                     
                        <group>
                            
                            <field name="description"  required="True"/>
                            <field name="hcd_eq_type" string="Tipo de equipamiento" required="True"/>
                            <field name="list_price" class="oe_inline"
                                widget='monetary'
                                        options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    
                            <field name="costo" class="oe_inline"
                                widget='monetary'
                                        options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            <field name="fecha_inicio" string="Actualizado:"/>
                            <field name="active" />
		                    
                        </group>
                        
                    </group>
                    <notebook>

                        <page string="Auditoría" name="auditoria" >
                            <group string="Última modificación">
                                <field name="write_uid"/>
                                <field name="write_date"/>
                            </group> 

                            <group string="Histórico de precios">
                                <field name="vigencia_ids">
                                    <tree editable="false">
                                        <field name="fecha_inicio"/>
                                        <field name="fecha_fin"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </group> 

                           <group string="Histórico de costos">
                                <field name="vigencia_costo_ids">
                                    <tree editable="false">
                                        <field name="fecha_inicio"/>
                                        <field name="fecha_fin"/>
                                        <field name="costo"/>
                                    </tree>
                                </field>
                            </group> 

                        </page>
                    </notebook>

                </sheet>

                </form> 

        </field>

    </record>

    <record id="view_tree_equipamiento" model="ir.ui.view">
        <field name="name">Checkout Tree Equip</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
                <field name="hcd_categ_prod" />
                <field name="obra_social_id" />
                <field name="paliativo" />
                <field name="tipo_paciente" />
                <field name="zona_geografica_id" />
                <field name="complejidad" />
                <field name="dia_habil" />
                <field name="discapacidad" />
            </tree>
        </field>
    </record>

        <record id="view_equipamiento_filter" model="ir.ui.view">
            <field name="name">coordinacion.equipamiento.search</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <search string="Equipamientos">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="hcd_eq_type"/>
                </search>
             </field>
        </record>

</odoo>
